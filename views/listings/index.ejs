<% layout("./layouts/boilerplate") %>

<style>
    /* ===== FILTER BAR ===== */
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 1.5rem;           /* space between icons */
        justify-content: flex-start; /* align items to the left */
        margin-top: 0.5rem;    /* spacing at the top of the filter bar */
    }

    .filter {
        text-align: center;
        opacity: 0.7;
        cursor: pointer;
        min-width: 60px;
        margin-top: 0.5rem;   /* spacing above each icon */
    }

    .filter i {
        font-size: 1.4rem;
    }

    .filter p {
        font-size: 0.8rem;
        margin: 0;
    }

    .filter:hover {
        opacity: 1;
    }

    /* ===== TAX TOGGLE (SQUARE) ===== */
    .tax-toggle {
        border: 1.5px solid #000;
        border-radius: 0.5rem;
        padding: 0.6rem 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
        margin-left: auto;    /* pushes toggle to the right */
    }

    /* ===== TAX INFO ===== */
    .tax-info {
        display: none;
    }

    /* ===== MOBILE FIX ===== */
    @media (max-width: 768px) {
        #filters {
            justify-content: center;
            gap: 1rem;
        }

        .tax-toggle {
            width: 100%;
            justify-content: center;
            margin-left: 0;   /* center toggle on small screens */
            margin-top: 0.5rem; /* spacing from icons */
        }
    }
</style>

<!-- ===== FILTERS ===== -->
<div id="filterCollapse" class="collapse d-md-block">
    <div id="filters">

        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-mountain-city"></i>
            <p>Iconic Cities</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-mountain"></i>
            <p>Mountains</p>
        </div>

        <div class="filter">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Castles</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-campground"></i>
            <p>Camping</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-cow"></i>
            <p>Farms</p>
        </div>

        <div class="filter">
            <i class="fa-regular fa-snowflake"></i>
            <p>Arctic</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-wand-magic-sparkles"></i>
            <p>New</p>
        </div>

        <div class="filter">
            <i class="fa-solid fa-ship"></i>
            <p>Houseboats</p>
        </div>

        <!-- ===== TAX TOGGLE ===== -->
        <div class="tax-toggle">
            <div class="form-check form-switch m-0">
                <input class="form-check-input" type="checkbox" id="switchCheckDefault">
                <label class="form-check-label ms-2" for="switchCheckDefault">
                    Display total after taxes
                </label>
            </div>
        </div>

    </div>
</div>

<!-- ===== LISTINGS ===== -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-4">

    <% for(let listing of allListings ) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
            <div class="card col border-0">
                <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1506953823976-52e1fdc0149a?...' %>"
                    class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">
                <div class="card-body listing-card">
                    <p class="card-text">
                        <b>
                            <%= listing.title %>
                        </b><br>
                        &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
                            <i class="tax-info">&nbsp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>

</div>

<!-- ===== TOGGLE SCRIPT ===== -->
<script>
    const taxSwitch = document.getElementById("switchCheckDefault");

    taxSwitch.addEventListener("change", () => {
        const taxInfo = document.getElementsByClassName("tax-info");

        for (let info of taxInfo) {
            info.style.display = taxSwitch.checked ? "inline" : "none";
        }
    });
</script>
