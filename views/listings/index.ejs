<% layout("./layouts/boilerplate") %>

    <style>
     
        /* ===== FILTER BAR ===== */
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 1.5rem;
            /* space between icons */
            justify-content: flex-start;
            /* align items to the left */
            margin-top: 0.5rem;
            /* spacing at the top of the filter bar */
            background-color: #fff;
            padding: 0.8rem 0;
            border-bottom: 1px solid #e5e5e5;
        }

        .filter {
            text-align: center;
            opacity: 0.7;
            cursor: pointer;
            min-width: 60px;
            margin-top: 0.5rem;
            /* spacing above each icon */
        }

        .filter i {
            font-size: 1.4rem;
        }

        .filter p {
            font-size: 0.8rem;
            margin: 0;
        }

        .filter:hover {
            opacity: 1;
        }

        #filters .filter {
            text-decoration: none;
            color: inherit;
        }

        /* ===== TAX TOGGLE (SQUARE) ===== */
        .tax-toggle {
            border: 1.5px solid #000;
            border-radius: 0.5rem;
            padding: 0.6rem 0.9rem;
            display: flex;
            align-items: center;
            justify-content: center;
            white-space: nowrap;
            margin-left: auto;
            /* pushes toggle to the right */
        }

        #switchCheckDefault:checked {
            background-color: #000;
            border-color: #000;
        }

        .card-img-top {
            position: relative;
            z-index: 1;
        }
        .navbar .form-control,
.navbar .btn {
  height: 38px;
}

.navbar form {
  align-items: center;
}

        /* ===== TAX INFO ===== */
        .tax-info {
            display: none;
        }

        /* ===== MOBILE FIX ===== */
        @media (max-width: 768px) {
            #filters {
                justify-content: center;
                gap: 1rem;
            }

            .tax-toggle {
                width: 100%;
                justify-content: center;
                margin-left: 0;
                /* center toggle on small screens */
                margin-top: 0.5rem;
                /* spacing from icons */
            }
        }
    </style>

    <div id="filterCollapse" class="d-md block mt-3">
        <div id="filters">

            <a href="/listings/category/Trending" class="filter">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </a>

            <a href="/listings/category/Rooms" class="filter">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </a>

            <a href="/listings/category/Iconic Cities" class="filter">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic Cities</p>
            </a>

            <a href="/listings/category/Mountains" class="filter">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </a>

            <a href="/listings/category/Castles" class="filter">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </a>

            <a href="/listings/category/Amazing Pools" class="filter">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing Pools</p>
            </a>

            <a href="/listings/category/Camping" class="filter">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </a>

            <a href="/listings/category/Farms" class="filter">
                <i class="fa-solid fa-cow"></i>
                <p>Farms</p>
            </a>

            <a href="/listings/category/Arctic" class="filter">
                <i class="fa-regular fa-snowflake"></i>
                <p>Arctic</p>
            </a>

            <a href="/listings/category/New" class="filter">
                <i class="fa-solid fa-wand-magic-sparkles"></i>
                <p>New</p>
            </a>

            <a href="/listings/category/Houseboats" class="filter">
                <i class="fa-solid fa-ship"></i>
                <p>Houseboats</p>
            </a>

            <div class="tax-toggle">
                <div class="form-check form-switch m-0">
                    <input class="form-check-input" type="checkbox" id="switchCheckDefault">
                    <label class="form-check-label ms-2" for="switchCheckDefault">
                        Display total after taxes
                    </label>
                </div>
            </div>

        </div>
    </div>


    <!-- ===== LISTINGS ===== -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-5">

        <% for(let listing of allListings ) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
                <div class="card col border-0">
                    <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1506953823976-52e1fdc0149a?...' %>"
                        class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">
                    <div class="card-body listing-card">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b><br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
                                <i class="tax-info">&nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>

    </div>

    <!-- ===== TOGGLE SCRIPT ===== -->
    <script>
        const taxSwitch = document.getElementById("switchCheckDefault");

        taxSwitch.addEventListener("change", () => {
            const taxInfo = document.getElementsByClassName("tax-info");

            for (let info of taxInfo) {
                info.style.display = taxSwitch.checked ? "inline" : "none";
            }
        });
    </script>